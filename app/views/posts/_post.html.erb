<div class="card">
  <%#= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype) %>
  <div class="card__body">
    <%= link_to post.title, posts_path(post), class: :card__title%>
    <p class="card__summary">
      <%= post.text %>
    </p>
    <%= link_to "by #{post.user.name}", root_path(post.user), class: :card__user %>
  </div>
</div>